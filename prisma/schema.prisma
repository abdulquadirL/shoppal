generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  passwordHash  String // üîê hashed
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shopper {
  id          String  @id @default(cuid())
  name        String
  email       String  @unique
  lat         Float
  lng         Float
  isAvailable Boolean @default(true)

  marketId String
  market   Market @relation("MarketShoppers", fields: [marketId], references: [id])

  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Market {
  id   String @id @default(cuid())
  name String
  lat  Float
  lng  Float

  shoppers Shopper[] @relation("MarketShoppers")
  orders   Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id         String  @id @default(cuid())
  customerId String
  shopperId  String?
  marketId   String

  shopSession String? // socket room id
  status      OrderStatus @default(PENDING)

  lat Float
  lng Float

  customer Customer @relation(fields: [customerId], references: [id])
  shopper  Shopper? @relation(fields: [shopperId], references: [id])
  market   Market   @relation(fields: [marketId], references: [id])

  items        OrderItem[]
  chatMessages ChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@index([customerId])
  @@index([shopperId])
  @@index([marketId])
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String

  product  String
  quantity Int

  order Order @relation(fields: [orderId], references: [id])

  @@index([orderId])
}

model ChatMessage {
  id         String     @id @default(cuid())
  orderId    String
  senderId   String
  senderRole SenderRole

  text       String?
  attachment String?
  voiceNote  String?

  readBy String[] @default([])

  order Order @relation(fields: [orderId], references: [id])

  createdAt DateTime @default(now())

  @@index([orderId])
}

enum OrderStatus {
  PENDING
  SHOPPER_ASSIGNED
  AWAITING_ACCEPTANCE
  PICKING
  DELIVERING
  DELIVERED
}

enum SenderRole {
  CUSTOMER
  SHOPPER
  SYSTEM
}

enum UserRole {
  CUSTOMER
  SHOPPER
  ADMIN
}
