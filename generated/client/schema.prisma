generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shopper {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  lat         Float
  lng         Float
  isAvailable Boolean  @default(true)
  marketId    String
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  market      Market   @relation(fields: [marketId], references: [id])
}

model Market {
  id        String    @id @default(cuid())
  name      String
  lat       Float
  lng       Float
  shoppers  Shopper[]
  orders    Order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model OrderItem {
  id       String @id @default(cuid())
  orderId  String
  product  String
  quantity Int

  order Order @relation(fields: [orderId], references: [id])
}

model Order {
  id           String        @id @default(cuid())
  customerId   String
  shopperId    String? // assigned shopper
  marketId     String
  shop_session String? // for real-time socket room
  status       OrderStatus   @default(PENDING)
  lat          Float
  lng          Float
  chatMessages ChatMessage[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  customer Customer    @relation(fields: [customerId], references: [id])
  shopper  Shopper?    @relation(fields: [shopperId], references: [id])
  market   Market      @relation(fields: [marketId], references: [id])
  items    OrderItem[]
}

model ChatMessage {
  id         String   @id @default(cuid())
  orderId    String
  senderId   String
  senderRole String
  text       String?
  attachment String? // For attachments
  createdAt  DateTime @default(now())

  // Read receipts
  readBy String[] @default([]) // stores user IDs who read this message
  order  Order    @relation(fields: [orderId], references: [id])

  @@index([orderId])
}

enum OrderStatus {
  PENDING
  SHOPPER_ASSIGNED
  PICKING
  DELIVERING
  DELIVERED
}

enum SenderRole {
  CUSTOMER
  SHOPPER
}
